<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/gris_tab"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/cardMedicamento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/horaPastilla"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:fontFamily="sans-serif-thin"
                android:layout_weight="1"
                android:text="8:00 a.m."
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/pillIcon"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pill" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombrePastilla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paracetamol"

                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/dosisPastilla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="1 unidad"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="" />

        </LinearLayout>

        <ImageView
            android:id="@+id/checkIcon"
            android:layout_height="60dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintWidth_percent="0.2"
            android:layout_gravity="center"
            app:srcCompat="@drawable/check_habilitado" />

    </LinearLayout>


</androidx.cardview.widget.CardView>